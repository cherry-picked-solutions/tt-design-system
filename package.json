{
  "name": "@cherry/ds",
  "version": "0.1.0-alpha",
  "description": "Design system",
  "type": "module",
  "main": "index.js",
  "exports": {
    "./components/*": "./src/components/*/*.js",
    "./styles/*": "./src/assets/styles/*/*.css"
  },
  "scripts": {
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "format": "npx prettier . --check",
    "format:fix": "npx prettier . --write",
    "manifest:build": "custom-elements-manifest analyze --litelement",
    "manifest:watch": "custom-elements-manifest analyze --watch --litelement --dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "start": "npm run storybook && npm run manifest:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cherry-picked-solutions/tt-design-system.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/cherry-picked-solutions/tt-design-system/issues"
  },
  "homepage": "https://github.com/cherry-picked-solutions/tt-design-system#readme",
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.1",
    "@custom-elements-manifest/analyzer": "0.11.0",
    "@eslint/js": "9.38.0",
    "@storybook/addon-a11y": "9.1.13",
    "@storybook/addon-docs": "9.1.13",
    "@storybook/addon-vitest": "9.1.13",
    "@storybook/web-components-vite": "9.1.13",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "eslint-config-prettier": "10.1.8",
    "globals": "16.4.0",
    "lit": "3.3.1",
    "playwright": "1.56.1",
    "prettier": "3.6.2",
    "storybook": "9.1.13",
    "vitest": "3.2.4"
  },
  "customElements": "custom-elements.json"
}
