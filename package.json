{
  "name": "@cherry/ds",
  "version": "0.1.0-alpha",
  "description": "Design system",
  "type": "module",
  "main": "index.js",
  "exports": {
    "./components/*": "./src/components/*/*.js",
    "./styles/*": "./src/assets/styles/*/*.css"
  },
  "scripts": {
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "format": "npx prettier . --check",
    "format:fix": "npx prettier . --write",
    "manifest:build": "custom-elements-manifest analyze --litelement",
    "manifest:watch": "custom-elements-manifest analyze --litelement --watch --dev",
    "test": "echo \"Error:, no test specified\" && exit 1",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "start": "npm run storybook & npm run manifest:watch",
    "publish:chromatic": "npx chromatic --exitzero-on-changes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cherry-picked-solutions/tt-design-system.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/cherry-picked-solutions/tt-design-system/issues"
  },
  "homepage": "https://github.com/cherry-picked-solutions/tt-design-system#readme",
  "devDependencies": {
    "@chromatic-com/storybook": "5.0.0",
    "@custom-elements-manifest/analyzer": "0.11.0",
    "@eslint/js": "9.39.2",
    "@storybook/addon-a11y": "10.2.7",
    "@storybook/addon-docs": "10.2.7",
    "@storybook/addon-vitest": "10.2.7",
    "@storybook/web-components-vite": "10.2.7",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "chromatic": "13.3.4",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-lit": "2.1.1",
    "globals": "16.5.0",
    "lit": "3.3.1",
    "playwright": "1.57.0",
    "prettier": "3.7.4",
    "storybook": "10.2.7",
    "vitest": "3.2.4",
    "eslint-plugin-storybook": "10.2.7"
  },
  "customElements": "custom-elements.json"
}
